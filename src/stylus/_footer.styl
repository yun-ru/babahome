.footer
    padding: 30px 0
    background-color: #0341A2
    margin-top: 100px
    position: relative
    z-index: 99
    h2
        color: #fff
        margin: 0
        padding: 0
        &.yellow
            color: yellow
    h1
        color: #fff
        margin: 0
        padding: 0
        margin-top: 10px

    ul,li
        margin: 0
        padding: 0
    ul
        margin: 6px 0
        margin-left: -10px
        li
            list-style none
            display: inline-block
            border-left: 1px solid #fff
            &:first-of-type
                border-left: none


            a
                display: block
                padding: 0 10px
                color: #fff
                &:hover
                    color: yellow

    p
        line-height: 25px
        color: #fff
